{
  "version": 2,
  "buildCommand": "npm ci --ignore-scripts && npm run build",
  "outputDirectory": "dist",
  "cleanUrls": false,
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "X-Robots-Tag", "value": "index, follow" }]
    }
  ]
}
