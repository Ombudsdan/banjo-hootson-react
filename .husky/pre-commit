# Run unit tests, lint, and type-check, but don't block commit on failure
echo "üîç Running pre-commit quality checks..."

npm run verify-lock ||  { echo "‚ö†Ô∏è Dependency verification failed. Run 'npm install' and commit the lockfile."; exit 1; }
